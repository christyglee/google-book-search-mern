{
  "name": "mern",
  "version": "1.0.0",
  "description": "Mern Demo",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'google-book-search-mern/*'\" \"npm run google-book-search-mern\"",
    "client": "cd google-book-search-mern && npm run start",
    "install": "cd google-book-search-mern && npm install",
    "build": "cd google-book-search-mern && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.10.15"
  }
}
